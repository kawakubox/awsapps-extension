{
  "name": "AWS Apps Extension",
  "description": "Extension of AWS SSO apps page",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.awsapps.com/*"],
      "js": ["dist/content.js"]
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ]
}
