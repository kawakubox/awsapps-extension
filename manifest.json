{
  "name": "AWS Apps Extension",
  "description": "Extension of AWS SSO apps page",
  "version": "1.1.2",
  "manifest_version": 3,
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.awsapps.com/*",
        "https://*.console.aws.amazon.com/*"
      ],
      "js": [
        "dist/content.js",
        "dist/globalNav.js"
      ]
    }
  ],
  "options_page": "assets/option.html",
  "permissions": [
    "storage",
    "tabs"
  ]
}
